<%- include('../partials/head.ejs')%>

<body class="filtro">
 <%- include('../partials/header.ejs')%>
  <main>
    <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top"><i
      class="fas fa-arrow-up"></i></button>

    <!-- CONTENEDOR PRINCIPAL -->
    <div class=" contenedor-principal d-flex justify-content-sm-between justify-content-lg-around flex-wrap m-5 ">
    <!--   FILTROS -->
      <aside class="filtro-aside col-12 col-lg-6 col-xl-2 p-3">
        <form action="">
        <h2 class="filtro-titulo">FILTROS</h2>
        <div class="accordion" id="accordionPanelsStayOpenExample">
          <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne"></h2>
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
              aria-controls="panelsStayOpen-collapseOne">
              <span class="filtro-span">Marcas</span>
            </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse "
              aria-labelledby="panelsStayOpen-headingOne">
              <div class="accordion-body">
                <div>
                  <input type="checkbox" class="form-check-input" id="c-disney" name="brand" id="marcas">
                  <label class="form-check-label" for="c-disney">disney</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-mattel" name="brand" id="marcas">
                  <label class="form-check-label" for="c-mattel">mattel</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-playmates" name="brand" id="edades">
                  <label class="form-check-label" for="c-playmates">playmates</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-hasbro" name="brand" id="edades">
                  <label class="form-check-label" for="c-hasbro">hasbro</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-lego" name="brand" id="edades">
                  <label class="form-check-label" for="c-lego">lego</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-marvel" name="brand" id="edades">
                  <label class="form-check-label" for="c-marvel">marvel</label>
                </div>
              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseTwo">
                <span class="filtro-span">Edades</span>
              </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse"
              aria-labelledby="panelsStayOpen-headingTwo">
              <div class="accordion-body">
                <div>
                  <input type="checkbox" class="form-check-input" id="c-24m" name="age" id="edades">
                  <label class="form-check-label" for="c-24m">De 0 a 24 meses</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-4a" name="age" id="edades">
                  <label class="form-check-label" for="c-4a">De 2 a 4 años</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-7a" name="age" id="edades">
                  <label class="form-check-label" for="c-7a">De 5 a 7 años</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-13a" name="age" id="edades">
                  <label class="form-check-label" for="c-13a">De 8 a 13 años</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-mayores" name="age" id="edades">
                  <label class="form-check-label" for="c-mayores">De 14 años y Mayores</label>
                </div>

              </div>
            </div>
          </div>
          <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                aria-controls="panelsStayOpen-collapseThree">
                <span class="filtro-span">Categoria de Productos</span>
              </button>
            </h2>
            <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
              aria-labelledby="panelsStayOpen-headingThree">
              <div class="accordion-body">
                <div>
                  <input type="checkbox" class="form-check-input" id="c-figuras" name="category" id="categoria">
                  <label class="form-check-label" for="c-figuras">figuras de accion</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-vehiculos" name="category" id="categoria">
                  <label class="form-check-label" for="c-vehiculos">vehiculos</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-disfraces" name="category" id="categoria">
                  <label class="form-check-label" for="c-disfraces">disfraces</label>
                </div>
                <div>
                  <input type="checkbox" class="form-check-input" id="c-juegosm" name="category" id="categoria">
                  <label class="form-check-label" for="c-juegosm">juegos de mesa</label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="filtro-botones">
          <div class="gap-2 col-12 col-lg- d-flex 
                justify-content-lg-end   justify-content-center mt-2  ">
            <button class="btn btn-primary " type="button">Aplicar</button>
            <button class="btn btn-danger" type="reset">Cancelar</button>
          </div>
        </div>
      </form>
      </aside>

     <!--  PRODUCTOS -->
      <section class=" col-12  col-lg-8  mt-3 ">

        <!-- Productos superior -->
        <div class="productos-destacados-superior d-flex  justify-content-between mb-5">
          <div><h3>Resultados de la búsqueda:</h3></div>
          <div>
            <select id="grid-sort-input" title="Sort Filter Input" aria-label="product filter">
            <option value="sort">Ordenar por</option>
            <option value="name-asc">Nombre A-Z</option>
            <option value="name-desc">Nombre Z-A</option>
            <option value="newest">Menor precio</option>
            <option value="newest">Mayor precio</option>
            </select>
          </div>
          <div>
            <button class="btn btn-warning"><a href="/products/add" style="font-size: 3rem;">AGREGAR UN PRODUCTO</a></button>
          </div>
        </div>
        
       <!--  PRODUCTOS INDIVIDUALES -->
      <div class="flex Produtos-destacados ">
        <% productos.forEach(producto => { %>
          <div class="col-12 col-sm-6 col-lg-4">
          <div class="producto">
            <a href="/products/detail/<%= producto.id %>">
              <div class="index-product-img-wrapper"><img class="producto__imagen p-3" style="height: 220px;" src="/img/detalle/<%= producto.images1%>" alt="producto1" /></div>
              <div class="producto__informacion">
                <p class="producto__nombre"><%= producto.name %></p>
                <% if(producto.discount !== 0) { %> 
                  <p class="producto__oferta">
                    <span><%= producto.price %></span>
                    /
                    <b><%= producto.discount %>% OFF</b>
                  </p>
                  <p class="producto__precios">
                    $<%=toThousand(finalPrice(producto.price,producto.discount)) %>
                    <% }else{ %>
                  </p>
                  <p class="precio__oculto">-</p>
                  <p class="producto__precios">
                    $<%= toThousand(producto.price) %>
                    <% } %>
                <p class="producto__marca"><%= producto.brand %></p>
              </div>
            </a>
            
          </div>
          <!-- .producto -->
        </div>
        <% }) %>
      
         
      </div>
          
      </section>
    </div>
  </main>



  <!-- Footer -->
  <%- include('../partials/footer.ejs')%>
  <!-- Footer -->

  <!--SCRIPTS-->
  <%- include('../partials/scripts.ejs')%>


</body>

</html>