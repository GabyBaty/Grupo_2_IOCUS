<%- include('../partials/head.ejs')%>

  <body class="login">
    <!--Botón ir hacia arriba-->
    <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top"><i
        class="fas fa-arrow-up"></i></button>
    <%- include('../partials/header.ejs')%>

      <main>
        <div class="main-container">
          <div class="main-form-login">
            <form  action="/users/login/logData" method="POST" id="form">
              <h3>Mi cuenta</h3>
              <h6>Si ya estas registrado, ingresa aquí.</h6>
              <div><label for="correo">Email</label>
                <input class="controls form-control" type="email" name="correoLogin" id="correo" >
               <p class="span"><span id="errorEmail" class="text-danger"></span></p>
                </div>
              <div class="campo">
                <label>Contraseña</label>
                <div class="d-flex input-group-lg">
                  <input class="controls form-control" type="password" name="passwordLogin" id="password">
                  <span class="input-group-text ojito"><i class="fas fa-eye show" id="eyeToggle"></i></span>
                </div>
                <p class="span"><span id= errorPass class="text-danger"></span></p>
              </div>
                
              <p><a href="#">¿Olvidaste tu contraseña?</a></p>
              
                <div class="mb-3 form-check d-flex justify-content-end">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar" value="1" >
                    <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                  </div>
           
              <button  class="main-form-register-button" type="submit"  >Ingresar</button>
              <span class="alert-danger"><%= locals.errores && errores.correoLogin ? errores.correoLogin.msg : null%> </span>
              <p class="span"><span id="msgError" class="text-danger"></span></p>

            </form>
          </div>
          <div class="main-form-register">
            <form class="needs-validation" action="/users/login/regData" method="POST" novalidate>
              <h3>Registrate ahora</h3>
              <h6>Completa tu email y contraseña para registrarte.</h6>
              <div>
                <label for="nombre">Nombre</label>
                <input class="controls form-control" type="text" name="nombre" id="nombre"
                  value="<%= locals.old && locals.old.nombre ? old.nombre : null%>" required>
                <small class="alert-danger ">
                  <%= locals.errores && locals.errores.nombre ? errores.nombre.msg : null %>
                    %>
                </small>
                <div class="invalid-feedback">
                  El nombre es requerido
                </div>
              </div>
              <div>
                <label for="apellido">Apellido</label>
                <input class="controls form-control" type="text" name="apellido" id="apellido"
                  value="<%= locals.old && locals.old.apellido ? old.apellido : null%>" required>
                <small class="alert-danger ">
                  <%= locals.errores && locals.errores.apellido ? errores.apellido.msg : null %>                  
                   
                </small>
                <div class="invalid-feedback">
                  Apellido requerido
                </div>
              </div>
              <div>
                <label for="correo">Email</label>
                <input class="controls form-control" type="email" name="correo" id="correo"
                  value="<%= locals.old && locals.old.correo ? old.correo : null%>" required>
                <small class="alert-danger ">
                  <%= locals.errores && locals.errores.correo ? errores.correo.msg : null %>
                 
                </small>
                <div class="invalid-feedback">
                  Email requerido
                </div>
              </div>
              <label for="password">Contraseña</label>
              <input class="controls form-control" type="password" name="password" id="password" required>
              <small class="alert-danger ">
                <%= locals.errores && locals.errores.password ? errores.password.msg : null %>
              
              </small>
              <div class="invalid-feedback">
                Contraseña requerido
              </div>
              <label>Repita contraseña</label>
              <input class="controls" type="password" name="password2" id="contraseña" placeholder="">
              <div>
                <small class="alert-danger ">
                  <%= locals.errores && locals.errores.password ? errores.password.msg : null %>
                
                </small> <br>
                <small class="alert-danger ">
                  <%= locals.errores && locals.errores.password2 ? errores.password2.msg : null %>
        
                </small>
              </div>
            <div class="form-check">
              <input name="acepta" class="form-check-input" id="invalidCheck" type="checkbox" required><label class="form-check-label" for="invalidCheck"> Acepto los Terminos y
                  Condiciones.</label>
              <small class="alert-danger">
                <%= locals.errores && locals.errores.acepta ? errores.acepta.msg : null %>
              </small>
              <div class="invalid-feedback">
                Terminos y Condiciones requeridos
              </div>
            </div>
              <input  class="main-form-register-button" value="Registrarse" type="submit"/>
            </form>
          </div>
        </div>
      </main>

      <!-- Footer -->
      <%- include('../partials/footer.ejs')%>
        <!-- Footer -->

        <!-- MAIN SCRIPTS-->
        <script src="/js/loginValidation.js"></script>
        <%- include('../partials/scripts.ejs')%>
     
  </body>

  </html>