<%- include('../partials/head.ejs')%>

<body>

  <!-- HEADER -->
  <%- include('../partials/header.ejs')%>
  <!--Botón ir hacia arriba-->
  <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top"><i
      class="fas fa-arrow-up"></i></button>

    <main>
        <div class="container-sm">
          <div class="row mt-5 d-flex justify-content-center">
            <div class="col-sm-4 p-5 bg-light shadow rounded">
                <form action="/users/edit-password/<%= usuario.id %>?_method=PUT" method="POST">
                    <div class="d-flex justify-content-center flex-column  align-items-center">
                  
                  <img src="/img/avatars/<%= usuario.avatar%> " alt="user-profile-img" class=" rounded-circle w-50 mt-5">
                  <p class="text-danger mt-3" id="role-user-profile"><%= usuario.role %></p>
                <!--   <input type="file" name="fotoUsuario" id="selectedFile" style="display: none;"  accept=".jpg, .png, .jpeg">
                  <input class="mt-5 w-50 btn btn-primary "style="font-size: 1.5rem;" type="button" value="Seleccionar imágen" onclick="document.getElementById('selectedFile').click();"> 
                  <a href="https://www.creartuavatar.com/" target="_blank"><input class="mt-5 w-150 px-5 btn btn-primary " style="font-size: 1.5rem;" type="button"  value="Crea tu avatar" ></a>  -->
              </div>
              </div>
            <div class="col-sm-6 p-5 bg-light shadow rounded d-flex flex-column ">
                <label for="password">Nueva contraseña</label>
                <input type="password" name="profileUserEditPassword" id="password" placeholder="Ingrese su nueva contraseña">
                <!-- <span class="input-group-text ojito"><i class="fas fa-eye show" id="eyeToggle"></i></span> -->
              <small class="alert-danger">
                <%= locals.errores && locals.errores.profileUserEditPassword ? errores.profileUserEditPassword.msg : null %>
              </small>
              <label for="verify-password-user-profile">Confirmar contraseña</label>
                            <input type="password" name="confirmEditPassword" id="verify-password-user-profile" placeholder="Confirme su nueva contraseña">
              <small class="alert-danger">
                <%= locals.errores && locals.errores.confirmEditPassword  ? errores.confirmEditPassword.msg : null %>
              </small>
              <label for="email-user-profile">Email de contacto</label>
              <p class="text-danger" id="email-user-profile"><%= usuario.correo  %></p>
              <button type="submit" class="btn btn-primary" style="color: white;font-size: 2rem;">Confirmar</button>
              <a href="/" class="btn btn-warning mt-3" style="color: white;font-size: 2rem;">Cancelar</a>
            </div>
            </form>
          </div>
        </div>
      </main>

  <!-- Footer -->
  <%- include('../partials/footer.ejs')%>
  <!-- Footer -->

  <!-- SCRIPT -->
  <%- include('../partials/scripts.ejs')%>

</body>

</html>