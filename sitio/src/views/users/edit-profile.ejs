<%- include('../partials/head.ejs')%>

<body>

  <!-- HEADER -->
  <%- include('../partials/header.ejs')%>
  <!--Botón ir hacia arriba-->
  <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top"><i
      class="fas fa-arrow-up"></i></button>
  <main>
    <div class="container-sm">
      <div class="row mt-5 d-flex justify-content-center">
        <div class="col-sm-4 p-5 bg-light shadow rounded">
          <form action="/users/edit-profile/<%= locals.usuario.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="d-flex justify-content-center flex-column  align-items-center ">
              <img src="/img/avatars/<%= locals.usuario.avatar%> " alt="user-profile-img" class=" rounded-circle w-50 ">
              <input type="file" name="fotoUsuario" id="selectedFile" style="display: none;"  accept=".jpg, .png, .jpeg">
              <input class="mt-5 w-50 " type="button" value="Seleccionar imágen" onclick="document.getElementById('selectedFile').click();"> 
          </div>
          </div>
        <div class="col-sm-6 p-5 bg-light shadow rounded d-flex flex-column ">
          <label for="name-user-profile">Nombre de Usuario</label>
          <input type="text" name="profileUserEditNombre" id="name-user-profile" maxlength="16" value="<%= user.nombre%>">
          <label for="lastname-user-profile">Apellido de Usuario</label>
          <input type="text" name="profileUserEditApellido" id="lastname-user-profile" value="<%= user.apellido%>">
          <label for="email-user-profile">Email de contacto</label>
          <p class="text-danger" id="email-user-profile"><%= user.correo  %></p>
          <label for="password-user-profile">Nueva contraseña</label>
          <input type="password" name="profileUserEditPassword" id="password-user-profile" placeholder="Ingrese su nueva contraseña">
          <label for="verify-password-user-profile">Confirmar contraseña</label>
          <input type="password" name="confirmeEditPassword" id="verify-password-user-profile" placeholder="Confirme su nueva contraseña">
          <label for="role-user-profile">Rol</label>
          <p class="text-danger" id="role-user-profile">Usuario</p>
          <button type="submit" class="btn btn-primary " style="font-size: 2rem;" >Guardar cambios</button>
        </div>
        </form>
      </div>
    </div>
  </main>
  <!-- Footer -->
  <%- include('../partials/footer.ejs')%>
  <!-- Footer -->

  <!-- SCRIPT -->
  <%- include('../partials/scripts.ejs')%>

</body>

</html>