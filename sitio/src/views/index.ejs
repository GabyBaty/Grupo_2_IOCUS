<%- include('partials/head.ejs')%>

<body>
  <!-- HEADER -->
  <%- include('partials/header.ejs')%>
  <!--Botón ir hacia arriba-->
  <button type="button" class="btn btn-warning btn-floating btn-lg" id="btn-back-to-top"><i
      class="fas fa-arrow-up"></i></button>
  <main>
    <!--CARROUSEL -->
    <section class="carrrousel">
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/img/carrrousel/1carr.png" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/img/carrrousel/2carr.png" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="/img/carrrousel/3carr.png" class="d-block w-100" alt="..." />
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <!-- PRODUCTOS DESTACADOS -->
    <section class="Produtos-destacados">
      <h2 class="titulo-destacado">destacados</h2>

      <div class="flex">
         <% destacados.forEach(destacado=> { %>
          <div class="col-12 col-sm-6 col-lg-3">
          <div class=" producto">
            <a href="/products/detail/<%= destacado.id %>">
              <div class="index-product-img-wrapper"><img class="producto__imagen p-3" style="height: 220px;" src="/img/detalle/<%= destacado.images[0].file  %>" alt="imagen-producto"/></div>
              <div class="producto__informacion">
                <p class="producto__nombre"><%= destacado.name %> </p>
                <% if(destacado.discount !== 0) { %> 
                <p class="producto__oferta">
                  <span><%= destacado.price %></span>
                  /
                  <b><%= destacado.discount %>% OFF</b>

                </p>
                <p class="producto__precios">
                  $<%=toThousand(finalPrice(destacado.price,destacado.discount)) %>
                  <% }else{ %>
                </p>
                <p class="precio__oculto">-</p>
                <p class="producto__precios">
                  $<%= toThousand(destacado.price) %>
                  <% } %>
                </p>
              </div>
             
            </a>
            <div class="botones">
              <a href="/products/cart/<%= destacado.id %>" class="productos__boton1">comprar</a>
              <a href="/products/detail/<%= destacado.id %> " class="productos__boton2"><i class="fas fa-eye"></i>ver</a>
            </div>
           
          </div>
        </div>
         <% }) %>
       
      
       

      </div>
      <div class="d-flex justify-content-center text-capitalize"> <a href="/products/filter"
          class="productos__boton1">descubrir más!</a></div>

    </section>

    <!--  CARROUSEL SLICK-->
    <section class="carrousel_slicky">
      <div class="informacion">
        <h2 class="titulo_slicky">EXPLORA LOS JUEGOS Y JUGUETES DE IOCUS</h2>
        <p class="parrafo_slicky">
          Encuentra todas tus marcas favoritas de juguetes en un solo lugar,
          como Disney, Mattel, Playmates,Hasbro, Lego ,Marvel ¡y muchas más!
          Mira figuras de acción, ,disfrases, juegos de mesa y mucho más, ¡hoy
          mismo!
        </p>
      </div>

      <div class="contenedor">
        <div class="thumbnail_slider_area">
          <div class="imagenes">
            <div>
              <img src="/img/slick/disney.png" alt="disney" />
            </div>
            <div>
              <img src="/img/slick/mattel.png" alt="mattel" />
            </div>
            <div>
              <img src="/img/slick/playmates.png" alt="playmates" />
            </div>
            <div>
              <img src="/img/slick/hasbro.png" alt="hasbro" />
            </div>
            <div>
              <img src="/img/slick/lego.png" alt="lego" />
            </div>
            <div class="col">
              <img src="/img/slick/marvel.png" alt="marvel" />
            </div>
          </div>
        </div>

        <div class="arrow">
          <span class="arrow_prev"><i class="fas fa-angle-left"></i></span>
          <span class="arrow_next"><i class="fas fa-angle-right"></i></span>
        </div>

        <div class="banner_slider">
          <div class="brand-hero-item disney">
            <div class="brand-container">
              <img class="item-img" src="/img/slick/itemdisney.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="/img/slick/herologoDisney.png" alt="" />
                <h2>El mundo Disney</h2>
                <p>
                  Explora el maravilloso mundo de juguetes y sets Disney, perfectos para todos.
                </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
          <div class="brand-hero-item mattel">
            <div class="brand-container">
              <img class="item-img" src="/img/slick/itemmattel.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="img/slick/herologoMattel.png" alt="" />
                <h2>Buscas MOTUS?</h2>
                <p>
                  Encontrá muñecos He Man edición Master of the universe y toda la linea Mattel.
                </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
          <div class="brand-hero-item playmates">
            <div class="brand-container">
              <img class="item-img" src="img/slick/itemplaymates.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="img/slick/herologoPlaymates.png" alt="" />
                <h2>Tortugas Ninja!!!</h2>
                <p>
                  Encuentra tus juguetes favoritos de Playmates y amplía tu colección.
                </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
          <div class="brand-hero-item hasbro">
            <div class="brand-container">
              <img class="item-img" src="img/slick/itemhasbro.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="img/slick/herologohasbro.png" alt="" />
                <h2>Luke, Soy tu padre</h2>
                <p>
                  Star wars y más en tu juguetería favorita, obviamente IOCUS. </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
          <div class="brand-hero-item lego">
            <div class="brand-container">
              <img class="item-img" src="img/slick/itemslego.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="img/slick/herologoLego.png" alt="" />
                <h2>Legomania!!</h2>
                <p>
                  Compra todos los productos de Lego oficial acá!!!
                </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
          <div class="brand-hero-item marvel">
            <div class="brand-container">
              <img class="item-img" src="img/slick/itemmarvel.png" alt="disney" />
              <div class="brand-information">
                <img class="hero-logo" src="img/slick/herologoMarvel.png" alt="" />
                <h2>Figuras de acción</h2>
                <p>
                  Amplía tu colección con nuestras más recientes figuras de acción de Marvel.
                </p>
                <a href="/products/filter">Ver los productos</a>
              </div>
            </div>
          </div>
          <!-- .brand-hero-item -->
        </div>
      </div>
    </section>

    <!-- ENVIOS Y OTROS -->
    <section class="contenedor_envios">
      <div class="envios">
        <article>
          <p class="envios__titulo">Horarios de atencion</p>
          <div class="envios__box">
            <p class="envios__parrafo"><i class="fas fa-clock envios__icono "></i>Todos los dias de 9 a 18h</p>
          </div>
        </article>

        <article>
          <p class="envios__titulo">Envíos a todo el país</p>
          <div class="envios__box">
            <p class="envios__parrafo"><i class="fas fa-rocket envios__icono"></i>Compras superiores a $5000</p>
          </div>
        </article>

        <article>
          <p class="envios__titulo">Metodos de pago</p>
          <div class="envios__box">
            <p class="envios__parrafo"><i class="fas fa-credit-card envios__icono"></i>Todas las tarjetas y mercadopago
            </p>
          </div>
        </article>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <%- include('partials/footer.ejs')%>
  <!-- Footer -->

  <!--   SCRIPTS -->
  <%- include('partials/scripts.ejs')%>

</body>

</html>